<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateItemAdminActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/backprevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cateNameCreateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="Fill all information to create new item"
        android:textAlignment="center"
        android:textColor="@color/redbnb"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backprevious" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/sliderAdCreate"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="@drawable/stewie"
        app:iss_auto_cycle="true"
        app:iss_corner_radius="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cateNameCreateItem" />
    <Button
        android:id="@+id/createImgSlider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Image Slider"
        android:fontFamily="@font/airbnb_cereal"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderAdCreate"/>

    <LinearLayout
        android:id="@+id/lndialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createImgSlider">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemNameCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item name"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtItemNameCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemPlaceCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Item place"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtItemPlaceCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemPriceCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Item price"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtItemPriceCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemRatingCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Item rating"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtItemRatingCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemDesCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Item description"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtItemDesCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgItemCreate"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/stewie"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lndialog"
        app:riv_corner_radius="25dp" />

    <LinearLayout
        android:id="@id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgItemCreate">

        <Button
            android:id="@+id/btnSelectCreate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="SELECT" />

        <Button
            android:id="@+id/btnUploadCreate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="UPLOAD" />
    </LinearLayout>

//item detail
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/redbnb"
            android:textSize="20dp"
            android:text="Item detail"
            android:fontFamily="@font/bungee"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminHostNameCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host name"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHostNameCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminHostMailCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host mail"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHostMailCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminHostPhoneCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Host phone"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHostPhoneCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/adminAddressCreate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/redplus">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAdminAddressCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/adAvatarCreate"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stewie"
                    app:civ_circle_background_color="@color/redbnb"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Host Avatar"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/itemSelectImgCreate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/airbnb_cereal"
                    android:transitionName="button"
                    android:text="select" />
                <Button
                    android:id="@+id/itemUploadImgCreate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/airbnb_cereal"
                    android:transitionName="button"
                    android:text="upload" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/redbnb"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ln">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/AdCheckInPickerCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/airbnb_cereal"
                        android:text="Check in time"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/AdCheckInTimeCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/airbnb_cereal"
                        android:text="Pick time"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/lnln"
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/AdCheckOutPickerCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/airbnb_cereal"
                        android:text="Pick time"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/AdCheckOutTimeCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/airbnb_cereal"
                        android:text="Pick time"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnCreateItem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:fontFamily="@font/airbnb_cereal"
            android:transitionName="button"
            android:text="Create new item" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>