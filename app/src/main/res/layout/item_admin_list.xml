<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/unSeenMess"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_squared"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itemAdAvatarMessage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/stewie"
                android:layout_marginTop="8dp"
                app:civ_circle_background_color="@color/redbnb"/>
            <TextView
                android:id="@+id/itemAdNameMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Name"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/redbnb"
                android:fontFamily="@font/bungee"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/itemAdEmailMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Email"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/redplus"
                android:textStyle="bold"
                android:fontFamily="@font/airbnb_cereal"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/itemAdGenderMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Gender"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/redplus"
                android:textStyle="bold"
                android:fontFamily="@font/airbnb_cereal"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/itemAdPhoneMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Phone"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textColor="@color/redplus"
                android:textStyle="bold"
                android:fontFamily="@font/airbnb_cereal"
                android:textSize="20dp"/>

        </LinearLayout>



    </LinearLayout>





</androidx.cardview.widget.CardView>